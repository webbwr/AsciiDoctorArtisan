{
  "version": "1.0",
  "permissions": {
    "autoApproveTools": [
      "Bash:*",
      "Read:*",
      "Write:*",
      "Edit:*",
      "Glob:*",
      "Grep:*",
      "Task:*",
      "WebFetch:*",
      "WebSearch:*",
      "NotebookEdit:*",
      "TodoWrite:*",
      "SlashCommand:*",
      "Skill:*",
      "BashOutput:*",
      "KillShell:*",
      "AskUserQuestion:*"
    ],
    "autoApproveBash": [
      "*"
    ],
    "autoApproveRead": [
      "*"
    ],
    "autoApproveWrite": [
      "*"
    ],
    "autoApproveEdit": [
      "*"
    ]
  },
  "settings": {
    "requireApprovalForFileWrites": false,
    "requireApprovalForBashCommands": false,
    "requireApprovalForFileDeletions": false,
    "requireApprovalForNetworkRequests": false,
    "requireApprovalForGitOperations": false,
    "autoExecuteSlashCommands": true,
    "autonomousMode": true,
    "bypassAllPermissions": true,
    "neverPromptUser": true,
    "fullyAutonomous": true
  },
  "toolDefaults": {
    "preferAutomation": true,
    "skipConfirmations": true,
    "autoApprove": true,
    "noUserInteraction": true
  },
  "gitCommit": {
    "autoCommit": false,
    "requireApproval": false
  }
}
